<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

  <Include file="KillTrakr.lua" />

  <Frame name="KillTrakr" parent="UIParent" frameStrata="DIALOG" clampedToScreen="true"
    movable="true" mixin="KillTrakrMixin,TitledPanelMixin"
    inherits="BasicFrameTemplate">
    <Size x="500" y="500" />
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Scripts>
      <OnLoad method="OnLoad" />
      <OnMouseDown>self:StartMoving()</OnMouseDown>
      <OnMouseUp>self:StopMovingOrSizing()</OnMouseUp>
      <OnEvent method="OnEvent" />
    </Scripts>
    <Layers>
      <Layer level="OVERLAY">
        <FontString parentKey="TitleText" font="GameFontHighlightLarge" text="KillTrakr">
          <Anchors>
            <Anchor point="TOP" relativeKey="$parent.TitleBg" x="0" y="-4" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

  <!-- Table and Cell Templates -->

  <Frame name="KillTrakrCellTemplate" virtual="true" inherits="ListCellTemplate"
    mixin="TextCellMixin">
    <KeyValues>
      <KeyValue key="justifyH" value="LEFT" />
      <KeyValue key="justifyV" value="CENTER" />
    </KeyValues>
    <Layers>
      <Layer level="ARTWORK">
        <FontString parentKey="text" font="GameFontHighlightLarge" wordwrap="true" maxLines="1">
          <Anchors>
            <Anchor point="TOPLEFT" x="2" y="-1" />
            <Anchor point="BOTTOMRIGHT" x="-1" y="1" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

  <Frame parent="KillTrakr" parentKey="Table" mixin="KillTrakrTableMixin"
    inherits="ListTableTemplate">
    <Anchors>
      <Anchor point="TOPLEFT" x="4" y="-24" />
      <Anchor point="BOTTOMRIGHT" x="-6" y="4" />
    </Anchors>
    <Scripts>
      <OnLoad method="OnLoad" />
    </Scripts>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="Bg" file="Interface\FrameGeneral\UI-Background-Marble"
          horizTile="True" vertTile="True" />
      </Layer>
    </Layers>
  </Frame>

</Ui>