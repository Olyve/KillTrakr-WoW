<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

  <Include file="KillTrakr.lua" />

  <Frame name="KillTrakr" parent="UIParent" frameStrata="DIALOG" clampedToScreen="true"
    movable="true" mixin="KillTrakrMixin,TitledPanelMixin" inherits="BasicFrameTemplateWithInset">
    <Size x="500" y="500" />
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Scripts>
      <OnLoad method="OnLoad" />
      <OnMouseDown>self:StartMoving()</OnMouseDown>
      <OnMouseUp>self:StopMovingOrSizing()</OnMouseUp>
      <OnEvent method="OnEvent" />
    </Scripts>
    <Layers>
      <Layer level="OVERLAY">
        <FontString parentKey="TitleText" font="GameFontHighlightLarge" text="KillTrakr">
          <Anchors>
            <Anchor point="TOP" relativeKey="$parent.TitleBg" x="0" y="-4" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

  <Frame parent="KillTrakr" parentKey="Table" mixin="KillTrakrTableMixin"
    inherits="ListTableTemplate">
    <Scripts>
      <OnLoad method="OnLoad" />
    </Scripts>
  </Frame>

  <Frame name="KillTrakrCellTemplate" virtual="true" inherits="ListCellTemplate"
    mixin="TextCellMixin">
    <KeyValues>
      <KeyValue key="justifyH" value="LEFT" />
    </KeyValues>
    <Layers>
      <Layer level="ARTWORK">
        <FontString parentKey="text" font="GameFontHighlightLarge" wordwrap="true" maxLines="2">
          <Anchors>
            <Anchor point="TOPLEFT" x="7" y="-1" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

</Ui>